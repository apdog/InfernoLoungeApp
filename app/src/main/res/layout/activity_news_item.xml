<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.activity.NewsItemActivity">

    <TextView
        android:id="@+id/fragment_item_news_text_date"
        android:layout_width="@dimen/fragment_item_date_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_item_card_view_margin_size"
        android:fontFamily="@font/metropolis_light"
        android:gravity="end"
        android:text="@string/string_news_date_example"
        android:textSize="@dimen/fragment_item_date_text_size"
        app:layout_constraintBottom_toTopOf="@id/fragment_item_card_view_body"
        app:layout_constraintEnd_toEndOf="@id/fragment_item_card_view_body"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/fragment_item_back_button"
        android:layout_width="@dimen/fragment_item_back_button_size"
        android:layout_height="@dimen/fragment_item_back_button_size"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_button_back"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_item_news_text_date"
        app:layout_constraintStart_toStartOf="@id/fragment_item_card_view_body"
        app:layout_constraintTop_toTopOf="@+id/fragment_item_news_text_date" />


    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_item_card_view_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fragment_item_card_view_margin_size"
        app:cardCornerRadius="@dimen/fragment_item_card_view_radius_size"
        app:cardElevation="@dimen/fragment_item_card_view_elevation_size"
        app:layout_constraintTop_toBottomOf="@id/fragment_item_news_text_date">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/fragment_item_news_poster"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fragment_item_poster_height"
                android:src="@drawable/news_food"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:importantForAccessibility="no"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/fragment_item_text_view_news_description"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/fragment_item_description_margin_top_size"
                android:background="@drawable/fragment_item_description_body_bg"
                android:fontFamily="@font/metropolis_bold"
                android:padding="@dimen/description_body_description_padding_size"
                android:gravity="fill"
                android:text="@string/news_description_example_text"
                android:textColor="@color/black"
                android:textSize="@dimen/fragment_item_description_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="VisualLintLongText" />

            <ImageView
                android:id="@+id/fragment_item_menu"
                android:layout_width="@dimen/fragment_item_menu_size"
                android:layout_height="@dimen/fragment_item_menu_size"
                android:layout_margin="@dimen/fragment_item_menu_margin_size"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_fragment_item_menu"
                app:layout_constraintBottom_toTopOf="@+id/fragment_item_text_view_news_description"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>