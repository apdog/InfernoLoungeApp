<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.activity.StockItemActivity">

    <TextView
        android:id="@+id/TV_stock_date"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/metropolis_light"
        android:gravity="end"
        android:text="24.12.23  10:00"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/card_view_stock_body"
        app:layout_constraintEnd_toEndOf="@id/card_view_stock_body"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/IV_back_from_stock"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/TV_stock_date"
        app:layout_constraintStart_toStartOf="@id/card_view_stock_body"
        app:layout_constraintTop_toTopOf="@+id/TV_stock_date" />


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_stock_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="30dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/TV_stock_date">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/IV_stock_poster"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:src="@drawable/news_food"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/TV_stock_description"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="300dp"
                android:background="@drawable/bg_description_body"
                android:fontFamily="@font/metropolis_bold"
                android:text="Эта книга адресована всем, кто изучает русский язык. Но состоит она не из правил, упражнений и учебных текстов. Для этого созданы другие замечательные учебники.

У этой книги совсем иная задача. Она поможет вам научиться не только разговаривать, но и размышлять по-русски. Книга, которую вы держите в руках, составлена из афоризмов и размышлений великих мыслителей, писателей, поэтов, философов и общественных деятелей различных эпох. Их мысли - о тех вопросах, которые не перестают волновать человечество.

Вы можете соглашаться или не соглашаться с тем, что прочитаете в этой книге. Возможно, вам покажется, что какие-то мысли уже устарели. Но вы должны обязательно подумать и обосновать, почему вы так считаете.

А еще вы узнаете и почувствуете, как прекрасно звучат слова любви, сострадания, мудрости и доброты на русском языке.

 "
                android:gravity="fill"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/IV_stock_poster" />

            <ImageView
                android:id="@+id/IV_stock_menu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="12dp"
                android:src="@drawable/ic_menu"
                app:layout_constraintBottom_toTopOf="@+id/TV_stock_description"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>






    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>