<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/news_item_width_size"
    android:layout_height="@dimen/news_item_height_size"
    android:layout_gravity="center_horizontal"
    android:elevation="@dimen/news_item_elevation_size"
    android:fadingEdge="horizontal"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_news_place"
            android:layout_width="@dimen/image_news_place_width_size"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/image_news_place_margin_size"
            android:src="@drawable/news_food"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:importantForAccessibility="no" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/news_image_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:importantForAccessibility="no" />

        <TextView
            android:id="@+id/news_name"
            android:layout_width="@dimen/news_name_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/news_name_margin_start"
            android:layout_marginTop="@dimen/news_name_margin_top"
            android:ellipsize="end"
            android:fontFamily="@font/metropolis_medium"
            android:text="@string/news_title_text"
            android:textColor="@color/black"
            android:textSize="@dimen/news_name_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/news_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/news_description_margin_start"
            android:layout_marginTop="@dimen/news_description_margin_top"
            android:layout_marginBottom="@dimen/news_description_margin_bottom"
            android:ellipsize="end"
            android:text="@string/news_description_text"
            android:textColor="@color/black"
            android:textSize="@dimen/news_description_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/image_news_place"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/news_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>